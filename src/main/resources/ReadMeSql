CREATE TABLE Cards ( -- карта проезда
    id SERIAL PRIMARY KEY,
    email varchar UNIQUE NOT NULL, -- авторизация по уникальному email
    card_balance int default 0  -- баланс карты
);

INSERT INTO cards (email) values ('test1@mail.ru');
